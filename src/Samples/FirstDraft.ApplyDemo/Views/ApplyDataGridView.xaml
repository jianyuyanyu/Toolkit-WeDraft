<UserControl x:Class="FirstDraft.ApplyDemo.Views.ApplyDataGridView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             DataContext="{Binding ApplyDataGridViewModel, Source={StaticResource Locator}}"
             xmlns:local="clr-namespace:FirstDraft.ApplyDemo.Views"
             xmlns:fd="clr-namespace:FirstDraft.Controls;assembly=FirstDraft"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DockPanel>
            <ScrollViewer DockPanel.Dock="Top" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <Border BorderThickness="1" BorderBrush="Gainsboro">
                        <WrapPanel  Margin="5">
                            <Button Margin="5" Content="表格"/>
                            <Button Margin="5" Content="DataGrid"/>
                        </WrapPanel>
                    </Border>


                    <TextBlock Text="默认样式：" FontWeight="Black" Margin="0 10 0 0"/>
                    <TextBlock Padding="10 0 0 0" TextWrapping="Wrap">
                        <Run Text="可以通过设置" />
                        <Run Text="ItemsSource" FontWeight="Black"  FontStyle="Oblique"/>
                        <Run Text="显示绑定的数据内容。" />
                    </TextBlock>
                    <Border BorderThickness="1" BorderBrush="Gainsboro">
                        <WrapPanel  Margin="5">
                            <DataGrid ItemsSource="{Binding Students}">

                            </DataGrid>
                        </WrapPanel>
                    </Border>


                    <TextBlock Text="可翻页自定义控件：" FontWeight="Black" Margin="0 10 0 0"/>
                    <TextBlock Padding="10 0 0 0" TextWrapping="Wrap">
                         <Run Text="修改默认的" />
                         <Run Text="DataGrid" FontWeight="Black"  FontStyle="Oblique"/>
                         <Run Text="控件为自定义控件" />
                         <Run Text="FdDataGrid" FontWeight="Black"  FontStyle="Oblique"/>
                         <Run Text="。设置" />
                         <Run Text="ShowPagination" FontWeight="Black"  FontStyle="Oblique"/>
                         <Run Text="显示翻页功能" />
                    </TextBlock>
                    <Border BorderThickness="1" BorderBrush="Gainsboro">
                        <WrapPanel  Margin="5">
                            <fd:FdDataGrid ItemsSource="{Binding Students}" BorderThickness="1" 
                                           AutoGenerateColumns="False" AllowDrop="False" IsReadOnly="True"
                                           CanUserSortColumns="True" CanUserAddRows="False"
                                           ShowPagination="True">
                                <fd:FdDataGrid.Columns>
                                    <DataGridTextColumn Header="编号" Binding="{Binding StudentId}" />
                                    <DataGridTextColumn Header="名称" Binding="{Binding Name}" CanUserSort="False"/>
                                    <DataGridTextColumn Header="注册" Binding="{Binding RegistrationDate}" CanUserSort="False"/>
                                    <DataGridTextColumn Header="邮件" Binding="{Binding Email}" CanUserSort="False"/>
                                    <DataGridTextColumn Header="分数" Binding="{Binding Course}" CanUserSort="False"/>
                                </fd:FdDataGrid.Columns>
                            </fd:FdDataGrid>
                        </WrapPanel>
                    </Border>
                </StackPanel>

            </ScrollViewer>

        </DockPanel>
    </Grid>
</UserControl>
