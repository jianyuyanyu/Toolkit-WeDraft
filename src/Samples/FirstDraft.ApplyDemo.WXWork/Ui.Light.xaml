<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <!-- default accent colors and brushes -->
    <Color x:Key="AccentColor">#FF3975C6</Color>
    <SolidColorBrush x:Key="Accent" Color="{DynamicResource AccentColor}" />

    <!-- 多用于控件被按下时颜色变化 -->
    <Color x:Key="ExAccentColor">#AA000000</Color>
    <SolidColorBrush x:Key="ExAccent" Color="{DynamicResource ExAccentColor}" />

    <Color x:Key="DefaultForegrounColor">#FF000000</Color>
    <SolidColorBrush x:Key="DefaultForeground" Color="{DynamicResource DefaultForegrounColor}" />

    <Color x:Key="DefaultBackgrounColor">#FFFFFFFF</Color>
    <SolidColorBrush x:Key="DefaultBackground" Color="{DynamicResource DefaultBackgrounColor}" />

    <sys:Double x:Key="DefalutFontSize">12</sys:Double>
    <sys:Double x:Key="DefalutIconSize">14</sys:Double>
    <sys:Double x:Key="HintTagFontSize">10</sys:Double>

    <!--<sys:String x:Key="Opt_OFF">OFF</sys:String>
    <sys:String x:Key="Opt_ON">OFF</sys:String>-->
    <sys:String x:Key="Opt_OFF">关</sys:String>
    <sys:String x:Key="Opt_ON">开</sys:String>

    <!--<SolidColorBrush x:Key="Button.Static.Border" Color="#FFADB2B5"/>-->
    <Color x:Key="MediumLightColor" >#66FFFFFF</Color>
    <Color x:Key="MediumColor" >#55000000</Color>
    <Color x:Key="MediumDarkColor" >#66000000</Color>
    <SolidColorBrush x:Key="MediumLight" Color="{DynamicResource MediumLightColor}"/>
    <SolidColorBrush x:Key="Medium" Color="{DynamicResource MediumColor}"/>
    <SolidColorBrush x:Key="MediumDark" Color="{DynamicResource MediumDarkColor}"/>
    <SolidColorBrush x:Key="Button.Static.Foreground" Color="{DynamicResource DefaultForegrounColor}"/>
    <SolidColorBrush x:Key="Button.Static.Background" Color="#44000000"/>
    <SolidColorBrush x:Key="Button.Static.Border" Color="#44000000"/>
    <SolidColorBrush x:Key="Button.Static.Glyph" Color="{DynamicResource DefaultForegrounColor}"/>
    <SolidColorBrush x:Key="Button.MouseOver.Foreground" Color="{DynamicResource DefaultBackgrounColor}"/>
    <SolidColorBrush x:Key="Button.MouseOver.Background" Color="#22000000"/>
    <SolidColorBrush x:Key="Button.MouseOver.Border" Color="#22000000"/>
    <SolidColorBrush x:Key="Button.Pressed.Background" Color="{DynamicResource ExAccentColor}"/>
    <SolidColorBrush x:Key="Button.Pressed.Border" Color="{DynamicResource ExAccentColor}"/>
    <SolidColorBrush x:Key="Button.Disabled.Background" Color="#22000000"/>
    <SolidColorBrush x:Key="Button.Disabled.Border" Color="#22000000"/>
    <SolidColorBrush x:Key="Button.Disabled.Foreground" Color="#22000000"/>
    <SolidColorBrush x:Key="Button.Disabled.Glyph" Color="#FF707070"/>

    <DropShadowEffect x:Key="DeepPathEffect" ShadowDepth="1" Color="Black" />

    <SolidColorBrush x:Key="Button.Checked.Background" Color="{DynamicResource AccentColor}"/>
    <SolidColorBrush x:Key="Button.Checked.Border" Color="{DynamicResource AccentColor}"/>
    <SolidColorBrush x:Key="Button.Checked.Foreground" Color="{DynamicResource DefaultForegrounColor}"/>

    <SolidColorBrush x:Key="TextBox.Static.Background" Color="{DynamicResource DefaultBackgrounColor}"/>
    <SolidColorBrush x:Key="TextBox.Static.Foreground" Color="{DynamicResource DefaultForegrounColor}"/>

    <SolidColorBrush x:Key="IconRadioButton.Checked.Background" Color="#22000000"/>
    <SolidColorBrush x:Key="IconRadioButton.Static.Border" Color="#44000000"/>
    <SolidColorBrush x:Key="IconRadioButton.Static.Foreground" Color="{DynamicResource DefaultForegrounColor}"/>
    <SolidColorBrush x:Key="IconRadioButton.Disabled.Foreground" Color="#22000000"/>
    <SolidColorBrush x:Key="IconRadioButton.Disabled.Background" Color="#22000000"/>
    <SolidColorBrush x:Key="IconRadioButton.Pressed.Background" Color="{DynamicResource ExAccentColor}"/>
    <SolidColorBrush x:Key="IconRadioButton.Pressed.Foreground" Color="#44000000"/>
    
    <SolidColorBrush x:Key="IconButton.MouseOver.Background" Color="#22FFFFFF"/>

    <SolidColorBrush x:Key="ComboBox.Selected.InList.Background" Color="#44000000"/>
    <SolidColorBrush x:Key="ComboBox.IsEnabled.Background" Color="#FFF4F4F4"/>
    <SolidColorBrush x:Key="ComboBox.IsEnabled.Foreground" Color="#FF838383"/>

    <SolidColorBrush x:Key="SliderThumb.Static.Background" Color="#5B5B5B"/>
    <SolidColorBrush x:Key="SliderThumb.Static.Border" Color="#5B5B5B"/>
    <SolidColorBrush x:Key="SliderThumb.Static.Foreground" Color="#FFE5E5E5"/>
    <SolidColorBrush x:Key="SliderThumb.MouseOver.Background" Color="{DynamicResource ExAccentColor}"/>
    <SolidColorBrush x:Key="SliderThumb.MouseOver.Border" Color="{DynamicResource ExAccentColor}"/>
    <SolidColorBrush x:Key="SliderThumb.Pressed.Background" Color="{DynamicResource AccentColor}"/>
    <SolidColorBrush x:Key="SliderThumb.Pressed.Border" Color="{DynamicResource AccentColor}"/>
    <SolidColorBrush x:Key="SliderThumb.Disabled.Background" Color="#22FFFFFF"/>
    <SolidColorBrush x:Key="SliderThumb.Disabled.Border" Color="#22FFFFFF"/>
    <SolidColorBrush x:Key="SliderThumb.Track.Background" Color="#99E4E4E4"/>
    <SolidColorBrush x:Key="SliderThumb.Track.Border" Color="#99E4E4E4"/>

    <SolidColorBrush x:Key="ListBox.Static.Background" Color="{DynamicResource DefaultBackgrounColor}"/>
    <SolidColorBrush x:Key="ListBox.Static.Border" Color="#FFABADB3"/>
    <SolidColorBrush x:Key="ListBox.Disabled.Background" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="ListBox.Disabled.Border" Color="#FFD9D9D9"/>

    <SolidColorBrush x:Key="ScrollBar.Static.Background" Color="#F0F0F0"/>
    <SolidColorBrush x:Key="ScrollBar.Static.Border" Color="#F0F0F0"/>
    <SolidColorBrush x:Key="ScrollBar.Static.Glyph" Color="#606060"/>
    <SolidColorBrush x:Key="ScrollBar.Static.Thumb" Color="#CDCDCD"/>
    <SolidColorBrush x:Key="ScrollBar.MouseOver.Background" Color="#DADADA"/>
    <SolidColorBrush x:Key="ScrollBar.MouseOver.Border" Color="#DADADA"/>
    <SolidColorBrush x:Key="ScrollBar.MouseOver.Glyph" Color="#000000"/>
    <SolidColorBrush x:Key="ScrollBar.MouseOver.Thumb" Color="#A6A6A6"/>
    <SolidColorBrush x:Key="ScrollBar.Pressed.Background" Color="#606060"/>
    <SolidColorBrush x:Key="ScrollBar.Pressed.Border" Color="#606060"/>
    <SolidColorBrush x:Key="ScrollBar.Pressed.Thumb" Color="#606060"/>
    <SolidColorBrush x:Key="ScrollBar.Pressed.Glyph" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ScrollBar.Disabled.Background" Color="#F0F0F0"/>
    <SolidColorBrush x:Key="ScrollBar.Disabled.Border" Color="#F0F0F0"/>
    <SolidColorBrush x:Key="ScrollBar.Disabled.Glyph" Color="#BFBFBF"/>


    <SolidColorBrush x:Key="SolidBrush.DataGrid.Foreground" Color="{DynamicResource DefaultForegrounColor}"/>
    <SolidColorBrush x:Key="SolidBrush.DataGrid.Background" Color="{DynamicResource DefaultBackgrounColor}"/>
    <SolidColorBrush x:Key="SolidBrush.DataGrid.GridLine" Color="{DynamicResource DefaultForegrounColor}"/>
    <SolidColorBrush x:Key="SolidBrush.DataGrid.ColumnHeader.BorderLine" Color="{DynamicResource DefaultForegrounColor}"/>
    <SolidColorBrush x:Key="SolidBrush.DataGrid.ColumnHeader.Foreground" Color="{DynamicResource DefaultForegrounColor}"/>
    <SolidColorBrush x:Key="SolidBrush.DataGrid.ColumnHeader.Background" Color="Transparent"/>
    <SolidColorBrush x:Key="SolidBrush.DataGrid.ColumnHeader.MouseOver.Foreground" Color="{DynamicResource DefaultForegrounColor}"/>
    <SolidColorBrush x:Key="SolidBrush.DataGrid.ColumnHeader.MouseOver.Background" Color="#DDDDDD"/>
    <SolidColorBrush x:Key="SolidBrush.DataGrid.ColumnHeader.Pressed.Foreground" Color="{DynamicResource DefaultForegrounColor}"/>
    <SolidColorBrush x:Key="SolidBrush.DataGrid.ColumnHeader.Pressed.Background" Color="#DDDDDD"/>
    <SolidColorBrush x:Key="SolidBrush.DataGrid.RowHeader.BorderLine" Color="{DynamicResource DefaultForegrounColor}"/>
    <SolidColorBrush x:Key="SolidBrush.DataGrid.RowHeader.Foreground" Color="{DynamicResource DefaultForegrounColor}"/>
    <SolidColorBrush x:Key="SolidBrush.DataGrid.RowHeader.Background" Color="Transparent"/>
    <SolidColorBrush x:Key="SolidBrush.DataGrid.RowHeader.MouseOver.Foreground" Color="{DynamicResource DefaultForegrounColor}"/>
    <SolidColorBrush x:Key="SolidBrush.DataGrid.RowHeader.MouseOver.Background" Color="#DDDDDD"/>
    <SolidColorBrush x:Key="SolidBrush.DataGrid.RowHeader.Pressed.Foreground" Color="Black"/>
    <SolidColorBrush x:Key="SolidBrush.DataGrid.RowHeader.Pressed.Background" Color="#DDDDDD"/>
    <SolidColorBrush x:Key="SolidBrush.DataGrid.RowHeader.RowSelected.Foreground" Color="#EEEEEE"/>
    <SolidColorBrush x:Key="SolidBrush.DataGrid.RowHeader.RowSelected.Background" Color="{DynamicResource AccentColor}"/>
    <SolidColorBrush x:Key="SolidBrush.DataGrid.Row.Background" Color="Transparent"/>
    <SolidColorBrush x:Key="SolidBrush.DataGrid.Row.MouseOver.Background" Color="{DynamicResource AccentColor}"/>
    <SolidColorBrush x:Key="SolidBrush.DataGrid.Cell.Foreground" Color="#FF000000"/>
    <SolidColorBrush x:Key="SolidBrush.DataGrid.Cell.Background" Color="Transparent"/>
    <SolidColorBrush x:Key="SolidBrush.DataGrid.Cell.BorderBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="SolidBrush.DataGrid.Cell.MouseOver.Background" Color="{DynamicResource AccentColor}"/>
    <SolidColorBrush x:Key="SolidBrush.DataGrid.Cell.MouseOver.Foreground" Color="{DynamicResource DefaultBackgrounColor}"/>
    <SolidColorBrush x:Key="SolidBrush.DataGrid.Cell.Selected.Background" Color="{DynamicResource AccentColor}"/>
    <SolidColorBrush x:Key="SolidBrush.DataGrid.Cell.Selected.Foreground" Color="{DynamicResource DefaultBackgrounColor}"/>

    
    <SolidColorBrush x:Key="SolidBrush.DatePicker.Foreground.Default" Color="{DynamicResource DefaultForegrounColor}" />
    <SolidColorBrush x:Key="SolidBrush.DatePicker.Foreground.Seleted" Color="#FFFFFF" />
    <SolidColorBrush x:Key="SolidBrush.DatePicker.BorderBrush.Default"  Color="#222222" />
    <SolidColorBrush x:Key="SolidBrush.DatePicker.BorderBrush.OnMouseOver"   Color="{DynamicResource AccentColor}" />
    <SolidColorBrush x:Key="SolidBrush.DatePicker.Background.Default"   Color="{DynamicResource DefaultBackgrounColor}" />
    <SolidColorBrush x:Key="SolidBrush.DatePicker.Background.HighlightToday"    Color="#66ef8736" />

    
    <Style x:Key="FocusVisual">
        <Setter Property="Control.Template">
            <Setter.Value>
                <ControlTemplate>
                    <Rectangle Margin="2" StrokeDashArray="1 2" SnapsToDevicePixels="true" StrokeThickness="1" Stroke="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="OptionMarkFocusVisual">
        <Setter Property="Control.Template">
            <Setter.Value>
                <ControlTemplate>
                    <Rectangle Margin="14,0,0,0" StrokeDashArray="1 2" SnapsToDevicePixels="true" StrokeThickness="1" Stroke="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>