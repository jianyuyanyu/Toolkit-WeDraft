<UserControl x:Class="FirstDraft.Demo.Sign.Views.SignView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FirstDraft.Demo.Sign.Views"
             xmlns:sign="clr-namespace:FirstDraft.Demo.Sign.Views.Sign"
             mc:Ignorable="d" 
             DataContext="{Binding SignVm, Source={StaticResource Locator}}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="Coral">
        <DockPanel>
            <sign:Host CurrentViewContent="{Binding CurrentView}"/>
        </DockPanel>
    </Grid>
</UserControl>
