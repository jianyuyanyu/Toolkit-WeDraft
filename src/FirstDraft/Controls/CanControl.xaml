<UserControl x:Class="FirstDraft.Controls.CanControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FirstDraft.Controls"
             mc:Ignorable="d" 
             DataContext="{Binding Path=., Source={x:Static local:CanControl.Default}}"
             d:DesignHeight="60" d:DesignWidth="400">
    <Grid>
        <Border>
            <UniformGrid Columns="4">
                <TextBlock Text="设备类型" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <UniformGrid Columns="2">
                    <TextBlock Text="索引" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <TextBlock Text="通道" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </UniformGrid>
                <TextBlock Text="波特率" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <UniformGrid Columns="2">
                    <TextBlock Text="CAN/FD" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <TextBlock Text="终端电阻" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </UniformGrid>
                <ComboBox ItemsSource="{Binding CanCategories,Source={x:Static local:CanControl.CanSource}}" SelectedItem="{Binding CCategroy}"/>
                <UniformGrid Columns="2">
                    <ComboBox ItemsSource="{Binding Path=CanIndexes ,Source={x:Static local:CanControl.CanSource}}" SelectedItem="{Binding CanIndex}"/>
                    <ComboBox ItemsSource="{Binding Path=ChannelIndexes ,Source={x:Static local:CanControl.CanSource}}" SelectedItem="{Binding ChannelIndex}"/>
                </UniformGrid>
                <UniformGrid Columns="2">
                    <ComboBox ItemsSource="{Binding Path=BaudRates,Source={x:Static local:CanControl.CanSource}}" SelectedItem="{Binding BaudRate}"/>
                    <ComboBox IsEnabled="{Binding EnableCANFD}" ItemsSource="{Binding Path=DataBaudRates ,Source={x:Static local:CanControl.CanSource}}" SelectedItem="{Binding DataBaudRate}"/>
                </UniformGrid>
                <UniformGrid Columns="2">
                    <ToggleButton IsChecked="{Binding EnableCANFD}" Tag="CANFD" Content="CAN" Style="{DynamicResource ToggleButton.TagContent}"/>
                    <ToggleButton IsChecked="{Binding EnableInternalResistance}" Tag="使能" Content="不使能" Style="{DynamicResource ToggleButton.TagContent}"/>
                </UniformGrid>
            </UniformGrid>
        </Border>
    </Grid>
</UserControl>
