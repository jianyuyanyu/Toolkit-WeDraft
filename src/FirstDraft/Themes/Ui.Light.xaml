<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <!-- default accent colors and brushes -->
    <!--<Color x:Key="AccentColor">#FF290736</Color>-->
    <Color x:Key="AccentColor">#FFef8736</Color>
    <SolidColorBrush x:Key="Accent" Color="{DynamicResource AccentColor}" />

    <!-- 多用于控件被按下时颜色变化 -->
    <Color x:Key="ExAccentColor">#FF2C6976</Color>
    <SolidColorBrush x:Key="ExAccent" Color="{DynamicResource ExAccentColor}" />
    
    <Color x:Key="DefaultForegrounColor">#FF000000</Color>
    <!--<Color x:Key="DefaultForegrounColor">#FFFFFFFF</Color>-->
    <SolidColorBrush x:Key="DefaultForeground" Color="{DynamicResource DefaultForegrounColor}" />

    <Color x:Key="DefaultBackgrounColor">#FFFFFFFF</Color>
    <!--<Color x:Key="DefaultBackgrounColor">#FF000000</Color>-->
    <SolidColorBrush x:Key="DefaultBackground" Color="{DynamicResource DefaultBackgrounColor}" />

    <sys:Double x:Key="DefalutFontSize">12</sys:Double>
    <sys:Double x:Key="DefalutIconSize">14</sys:Double>
    <sys:Double x:Key="HintTagFontSize">10</sys:Double>


    <!--<sys:String x:Key="Opt_OFF">OFF</sys:String>
    <sys:String x:Key="Opt_ON">OFF</sys:String>-->
    <sys:String x:Key="Opt_OFF">关</sys:String>
    <sys:String x:Key="Opt_ON">开</sys:String>

</ResourceDictionary>